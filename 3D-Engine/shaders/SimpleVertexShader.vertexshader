
#version 330 core

layout(location = 0) in vec3 vertexPosition_modelspace;
layout(location = 1) in vec2 vertexUV;
layout(location = 2) in vec4 color;

uniform mat4 VP;
uniform mat4 M;

out DATA
{
	vec4 position;
	vec4 color;
	vec2 UV;

} vs_out;

void main()
{
	gl_Position = VP * M * vec4(vertexPosition_modelspace, 1);
	vs_out.position = gl_Position;
	vs_out.color = color;
	vs_out.UV = vertexUV;
}